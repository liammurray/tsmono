{
  "name": "@nod15c/global-cls-context",
  "version": "0.0.0",
  "description": "Global CLS context for express or similar service",
  "main": "./dist/src/index.js",
  "private": true,
  "scripts": {
    "audit-checker": "check-audit",
    "audit-resolver": "resolve-audit",
    "build": "npm run compile:clean && npm run compile:dist",
    "compile:clean": "rimraf dist",
    "compile": "ttsc",
    "compile:watch": "ttsc -w",
    "lambda": "rimraf lambda && cpx 'dist/src/**/*.js' lambda && cpx 'package*.json' lambda && cd lambda && npm ci --production",
    "format": "npm run format:prettier",
    "format:prettier": "prettier --write '**/*.{ts,js,md,json}'",
    "test:tsnode": "env TS_NODE_COMPILER=ttypescript mocha --config .mocharc-tsnode.yml",
    "test:tsnode:cov": "env TS_NODE_COMPILER=ttypescript nyc npm run test",
    "test": "mocha --config .mocharc.yml",
    "test:cov": "nyc npm run test",
    "lint": "npm run lint:mdlint && npm run lint:eslint",
    "lint:mdlint": "[ -f .markdownlint.yaml ] && markdownlint .",
    "lint:eslint": "eslint --cache --ext .ts ./",
    "start": "node dist/src/server.js",
    "start:debug": "node --inspect=localhost:9229 dist/src/server.js",
    "start:watch": "ttsc -w & nodemon -q -w dist/src dist/src/server.js",
    "start:watch:tsnode": "nodemon --config nodemon-tsnode.json ./src/index.ts"
  },
  "dependencies": {
    "@nod15c/correlation-ids": "^0.0.0",
    "cls-hooked": "^4.2.2",
    "env-var": "^6.3.0",
    "pino": "^6.6.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/cpx": "^1.5.1",
    "@types/eslint": "^7.2.2",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/markdownlint": "^0.13.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.1",
    "@types/prettier": "^2.1.1",
    "@types/sinon": "^9.0.5",
    "@types/sinon-chai": "^3.2.4",
    "@types/source-map-support": "^0.5.3",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cpx": "^1.5.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "markdownlint": "^0.20.4",
    "markdownlint-cli": "^0.23.2",
    "mocha": "^8.1.3",
    "npm-audit-resolver": "^2.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "ttypescript": "^1.5.12",
    "typescript": "^4.0.3",
    "typescript-eslint": "0.0.1-alpha.0",
    "typescript-transform-paths": "^2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "na"
  },
  "author": "Joe Blow",
  "license": "",
  "readme": "./README.md"
}
